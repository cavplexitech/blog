<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<p><strong>Author: </strong><%= "#{@article.user.profile.first_name} #{@article.user.profile.last_name}" %></p>

<ul>
<% if can? :update, @article %>
	<li><%= link_to "Edit", edit_article_path(@article) %></li>
<% end %>
<% if can? :delete, @article %>
	<li><%= link_to "Delete", article_path(@article), data: {
				turbo_method: :delete,
				turbo_confirm: "Are you sure?"
				} %></li>
<% end %>
</ul>

<h3>Comments</h3>
<%= render @article.comments %>

<h4>Add a comment:</h4>
<%= render 'comments/form' %>

