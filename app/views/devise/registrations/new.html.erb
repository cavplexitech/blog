<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.fields_for :profile do |pf| %>
    <div class="field">
      <%= pf.label :first_name %><br>
      <%= pf.text_field :first_name, placeholder: 'First name', required: true %>
    </div><br>
    <div class="field">
      <%= pf.label :last_name %><br>
      <%= pf.text_field :last_name, placeholder: 'Last name', required: true %>
    </div><br>
    <div class="field">
      <%= pf.label :phone %><br>
      <%= pf.text_field :phone, placeholder: 'Phone', required: true %>
    </div><br> 
  <% end %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
  </div><br> 
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br>
    <%= f.password_field :password, autocomplete: "new-password", required: true %>
  </div><br> 
  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
  </div><br> 

  <%= f.fields_for :profile do |pf| %>
    <div class="field">
      <div class="gravatar_edit">
       <%= pf.label "Profile Picture" %> <br/>
       <%= pf.file_field :avatar, placeholder: "Upload Picture", direct_upload: true %> <br/>
      </div>
    </div><br> 
    <div class="field">
      <%= pf.label :biography %><br>
      <%= pf.text_area :biography, cols: 40, rows: 3, placeholder: 'Bio' %>
    </div><br>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
